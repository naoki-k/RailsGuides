<h1>Listing articles</h1>

<table border= "1" ,rules="all">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% @article.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New article', new_article_path %>
